# Basphere API Server Configuration

server:
  # 보안: localhost만 수신 (nginx 리버스 프록시 사용)
  # 외부 직접 노출 시 0.0.0.0으로 변경 (권장하지 않음)
  host: "127.0.0.1"
  port: 8080

storage:
  # 대기 중인 등록 요청 저장 디렉토리
  pending_dir: "/var/lib/basphere/pending"

provisioner:
  # basphere-admin 스크립트 경로
  admin_script: "/usr/local/bin/basphere-admin"
